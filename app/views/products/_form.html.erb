<%= form_with(model: @product, remote: true, html: { class: "product-form", multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-input", placeholder: "Enter product title" %>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-input", rows: 4, placeholder: "Enter product description" %>
  </div>

<div class="form-group">
  <%= form.label :price, class: "form-label" %>
  <div class="input-wrapper">
    <span class="currency-symbol">$</span>
    <%= form.number_field :price, step: 0.01, class: "form-input", placeholder: "0.00" %>
  </div>
</div>


  <div class="form-group">
    <%= form.label :quantity, class: "form-label" %>
    <%= form.number_field :quantity, class: "form-input", placeholder: "Enter product quantity" %>
  </div>

  <div class="form-group">
    <h3 class="section-heading">Images</h3>
    <div id="existing-images" class="image-list">
      <% @product.product_images.each_with_index do |image, index| %>
        <% if image.image.attached? %>
          <div class="image-item">
            <%= image_tag url_for(image.image), class: 'product-thumbnail', size: "100x100" %>
            <div class="remove-option">
              <%= check_box_tag "product[product_images_attributes][#{index}][_destroy]", '1', false %>
              <%= hidden_field_tag "product[product_images_attributes][#{index}][id]", image.id %>
              <%= label_tag "product[product_images_attributes][#{index}][_destroy]", "Remove", class: "remove-label" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :new_images, "Add New Images", class: "form-label" %>
      <%= file_field_tag "product[new_images][]", multiple: true, class: "form-input" %>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit "Save Product", class: "btn-submit" %>
  </div>
<% end %>
