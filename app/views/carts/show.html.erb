<div class="cart-container">
  <div class="cart-card">
    <div class="cart-header">
      <h3 class="cart-title">ðŸ›’ Your Cart</h3>
      <%= link_to 'Continue Shopping', root_path, class: 'btn-cart-continue' %>
    </div>

    <div class="cart-body">
      <% if @cart.cart_items.any? %>
        <div class="cart-table-wrapper">
          <table class="cart-table">
            <thead>
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @cart.cart_items.each do |cart_item| %>
                <tr>
                  <td class="product-title"><%= cart_item.product.title %></td>
                  <td><%= number_to_currency(cart_item.product.price) %></td>
                  <td>
                    <%= form_with(model: cart_item, url: cart_item_path(cart_item), method: :patch, remote: true, class: 'quantity-form') do |f| %>
                      <%= f.number_field :quantity, value: cart_item.quantity, min: 1, class: 'quantity-input' %>
                      <%= f.submit "Update", class: "btn-update" %>
                    <% end %>
                  </td>
                  <td><strong><%= number_to_currency(cart_item.product.price * cart_item.quantity) %></strong></td>
                  <td>
                    <%= button_to "Remove", cart_item_path(cart_item), method: :delete, class: "btn-remove" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        
        <div class="cart-summary">
          <h4 class="cart-subtotal">
            Subtotal: <%= number_to_currency(@cart.subtotal) %>
          </h4>
          
      
          
          <h4 class="cart-total">
            ðŸ§¾ Total: <%= number_to_currency(@cart.total_price) %>
          </h4>
          
          <%= button_to 'Checkout with Stripe', checkout_create_path, method: :post, class: 'btn-checkout' %>
        </div>

        <div class="coupon-section">
          <%= form_with url: apply_coupon_cart_items_path, method: :post, local: true, class: 'coupon-form' do |form| %>
            <div class="form-group">
              <%= form.label :coupon_code, 'Enter Coupon Code', class: 'form-label' %>
              <%= form.text_field :coupon_code, class: 'form-input', placeholder: 'e.g. DevnTech', required: true %>
              <%= form.submit 'Apply Coupon', class: 'btn-coupon' %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="cart-empty">
          <p>Your cart is empty.</p>
          <%= link_to 'Continue Shopping', root_path, class: 'btn-cart-continue' %>
        </div>
      <% end %>
    </div>
  </div>
</div>