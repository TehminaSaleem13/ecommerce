<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="forgot-password-container">
  <h2>Forgot your password?</h2>

  <%= form_with model: resource, url: password_path(resource_name), remote: true, class: 'forgot-password-form' do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: 'input-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-field' %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'submit-button' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
